/**index.wxss**/
.usertop {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 20%;
    background-color: #2f54eb;
}
.userinfo {
    padding: 15rpx 0;
    margin-top: 15rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-shadow: 1px 1px 1px 1px #6f6970;
    border-radius: 2%;
    width: 80%;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.orders {
    margin-top: 50rpx;
    padding: 40rpx 0;
    font-size: 30rpx;
    text-align: center;
    background-color: #fff;
    width: 100%;
}
.van-icon {
    display: block;
    font-size: 30rpx;
}
<!--index.wxml-->
<view class="container">
    <view class="userinfo">
        <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称
        </button>
        <block wx:else>
            <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>
    </view>
    <view class="orders">
        <van-row>
            <van-col span="6">
                <van-icon name="pending-payment"/>
                待付款
            </van-col>
            <van-col span="6">
                <van-icon name="pending-orders"/>
                待接单
            </van-col>
            <van-col span="6">
                <van-icon name="pending-deliver"/>
                待生效
            </van-col>
            <van-col span="6">
                <van-icon name="logistics"/>
                已完成
            </van-col>
        </van-row>
    </view>
    <view>
        <van-cell-group class="user-group">
            <van-cell icon="records" title="全部订单" is-link/>
        </van-cell-group>
        <van-cell-group class="user-group">
            <van-cell icon="location" title="我的地址" is-link/>
        </van-cell-group>
        <van-cell-group>
            <van-cell icon="exchange" title="我的积分" is-link/>
            <van-cell icon="gift" title="我的收藏" is-link/>
            <van-cell icon="gold-coin" title="我的资产" is-link/>
        </van-cell-group>
    </view>
</view>




.m-trip {
    overflow: hidden;
    position: relative;
    border-radius: 8 rpx;
    margin-bottom: 20 rpx;
}

.m-trip .cover {
    width: 100%;
    height: 352 rpx;
    vertical-align: bottom;
}

.m-trip::before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 560 rpx;
    height: 100%;
    border-top-left-radius: 8 rpx;
    border-bottom-left-radius: 8 rpx;
    background: linear-gradient(to right, rgba(0, 0, 0, .6) 0, rgba(0, 0, 0, 0) 100%);
}

.m-trip .info {
    color: #fff;
    padding: 0 30 rpx;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
    box-sizing: border-box;
}

.m-trip .info .h2 {
    font-size: 36 rpx;
    font-weight: 600;
    line-height: 1.22;
    text-shadow: 2 rpx 2 rpx rgba(0, 0, 0, .4);
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-top: 30 rpx;
}

.m-trip .detail {
    margin-top: 10 rpx;
    padding-left: 18 rpx;
    position: relative;
    font-size: 18 rpx;
    line-height: 1;
    font-weight: bold;
    text-shadow: 2 rpx 4 rpx 0px rgba(0, 0, 0, 0.20);
}

.m-trip .detail view {
    margin-bottom: 6 rpx;
}

.m-trip .detail text {
    margin-right: 20 rpx;
}

.m-trip .detail .place {
    font-weight: normal;
    font-size: 16 rpx;
}

.m-trip .detail::before {
    content: '';
    width: 6 rpx;
    height: 100%;
    border-right: 1 rpx;
    background-color: #4ABDCC;
    position: absolute;
    left: 4 rpx;
    top: 2 rpx;
}

.m-trip .user {
    position: absolute;
    width: 100%;
    left: 30 rpx;
    bottom: 30 rpx;
    line-height: 50 rpx;
    font-size: 18 rpx;
}

.m-trip .avatar {
    width: 50 rpx;
    height: 50 rpx;
    float: left;
    margin-right: 15 rpx;
    border-radius: 50 rpx;
    vertical-align: bottom;
}

.m-trip .bottom {
    position: absolute;
    bottom: 24 rpx;
    font-size: 20 rpx;
}

.m-trip-s {
    color: #fff;
    overflow: hidden;
    position: relative;
    border-radius: 8 rpx;
    margin-bottom: 20 rpx;
}

.m-trip-s .mask {
    position: absolute;
    left: 0;
    top: 0;
    width: 222 rpx;
    height: 240 rpx;
    background-color: rgba(255, 255, 255, 0);
    background-image: linear-gradient(to right, rgba(0, 0, 0, .6), rgba(0, 0, 0, 0));
    border-top-left-radius: 8 rpx;
    border-bottom-left-radius: 8 rpx;
}

.m-trip-s .cover {
    width: 100%;
    height: 240 rpx;
    vertical-align: bottom;
    background-position: center center;
}

.m-trip-s .info {
    position: absolute;
    left: 0;
    top: 0;
    margin: 20 rpx 28 rpx;
    text-shadow: 2 rpx 3 rpx rgba(0, 0, 0, .2);
}

.m-trip-s .title {
    font-size: 36 rpx;
    font-weight: bold;
    margin-left: -4 rpx;
    line-height: 50 rpx;
}

.m-trip-s .detail {
    font-size: 20 rpx;
    position: relative;
    height: 16 rpx;
    line-height: 16 rpx;
    padding-left: 16 rpx;
    margin-top: 4 rpx;
}

.m-trip-s .detail::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 6 rpx;
    height: 16 rpx;
    background-color: #4abdcc;
}

.m-trip-s .detail view {
    display: inline-block;
    margin-right: 16 rpx;
}

.m-trip-s .detail text {
    font-weight: bold;
}

.m-trip-s .stat {
    position: absolute;
    width: 100%;
    left: 0;
    bottom: 24 rpx;
    height: 32 rpx;
    line-height: 31 rpx;
    font-size: 20 rpx;
    padding-left: 28 rpx;
    background-color: rgba(0, 0, 0, .4);
    z-index: 2;
}

.m-trip-s .stat::before {
    content: '';
    width: 100%;
    position: absolute;
    height: 40 rpx;
    left: 0;
    bottom: -4 rpx;
    background-color: rgba(0, 0, 0, .4);
    z-index: -1;
}

.m-trip-s .stat view {
    position: relative;
    display: inline-block;
    margin-right: 30 rpx;
    padding-left: 16 rpx;
}

.m-trip-s .stat view::before {
    content: '';
    width: 8 rpx;
    height: 8 rpx;
    position: absolute;
    left: 0;
    top: 12 rpx;
    background-color: #4abdcc;
    border-radius: 8 rpx;
}

.m-trip-s .stat text {
    font-weight: bold;
}
